# I think we should use posix shell compatible mode to do it...
___x_cmd_shall_try_get_image(){
    case "${1:?Provide fun}" in
        bash3)              printf "%s" bash:3 ;;
        bash4)              printf "%s" bash:4 ;;
        bash5)              printf "%s" bash:5 ;;
        zsh)                printf "%s" xcmd/base-alpine-2-dev ;;
        ksh)                printf "%s" xcmd/base-alpine-2-dev ;;
        ash)                printf "%s" xcmd/base-alpine-2-dev ;;
        dash)               printf "%s" xcmd/base-debian-2-dev ;;

        alpine-bash3)       printf "%s" bash:3 ;;
        alpine-bash4)       printf "%s" bash:4 ;;
        alpine-bash5)       printf "%s" bash:5 ;;
        alpine-zsh)         printf "%s" xcmd/base-alpine-2-dev ;;
        alpine-ksh)         printf "%s" xcmd/base-alpine-2-dev ;;
        alpine-ash)         printf "%s" xcmd/base-alpine-2-dev ;;
        alpine-dash)        printf "%s" xcmd/base-debian-2-dev ;;

        debian-bash3)      printf "%s" bash:3 ;;
        debian-bash4)      printf "%s" bash:4 ;;
        debian-bash5)      printf "%s" bash:5 ;;
        debian-zsh)        printf "%s" xcmd/base-alpine-2-dev ;;
        debian-ksh)        printf "%s" xcmd/base-alpine-2-dev ;;
        debian-ash)        printf "%s" xcmd/base-alpine-2-dev ;;
        debian-dash)       printf "%s" xcmd/base-debian-2-dev ;;


        centos-bash3)      printf "%s" bash:3 ;;
        centos-bash4)      printf "%s" bash:4 ;;
        centos-bash5)      printf "%s" bash:5 ;;
        centos-zsh)        printf "%s" xcmd/base-alpine-2-dev ;;
        centos-ksh)        printf "%s" xcmd/base-alpine-2-dev ;;
        centos-ash)        printf "%s" xcmd/base-alpine-2-dev ;;
        centos-dash)       printf "%s" xcmd/base-debian-2-dev ;;


        gentoo-bash3)      printf "%s" bash:3 ;;
        gentoo-bash4)      printf "%s" bash:4 ;;
        gentoo-bash5)      printf "%s" bash:5 ;;
        gentoo-zsh)        printf "%s" xcmd/base-alpine-2-dev ;;
        gentoo-ksh)        printf "%s" xcmd/base-alpine-2-dev ;;
        gentoo-ash)        printf "%s" xcmd/base-alpine-2-dev ;;
        gentoo-dash)       printf "%s" xcmd/base-debian-2-dev ;;


        arch-bash3)      printf "%s" bash:3 ;;
        arch-bash4)      printf "%s" bash:4 ;;
        arch-bash5)      printf "%s" bash:5 ;;
        arch-zsh)        printf "%s" xcmd/base-alpine-2-dev ;;
        arch-ksh)        printf "%s" xcmd/base-alpine-2-dev ;;
        arch-ash)        printf "%s" xcmd/base-alpine-2-dev ;;
        arch-dash)       printf "%s" xcmd/base-debian-2-dev ;;

    esac
}

