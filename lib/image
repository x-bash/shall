
# Section: get image

___x_cmd_shall_get_ximage(){
    case "$1" in
        bash3)      printf "%s" bash:3 ;;   # inject curl
        bash4)      printf "%s" bash:4 ;;   # inject curl
        bash5)      printf "%s" xcmd/alpine-2-dev ;;
        zsh)        printf "%s" xcmd/alpine-2-dev ;;
        ksh)        printf "%s" xcmd/alpine-2-dev ;;
        ash)        printf "%s" xcmd/alpine-2-dev ;;
        dash)       printf "%s" xcmd/debian-2-dev ;;
    esac
}

___x_cmd_shall_image_name(){
    cat <<A
bash3
bash4
bash5
zsh
ash
dash
ksh
A
}

___x_cmd_shall_image_name_all(){
    local i
    local line
    for i in alpine debian centos gentoo arch; do
        ___x_cmd_shall_image_name | while read -r line; do
            printf "%s-%s\n" "$i" "$line"
        done
    done
}

